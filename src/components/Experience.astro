---
import data from '../data/experience.json';
import type { Experience } from '../types/types';
import TabsWithContent from './TabsWithContent';

const experience = data as Experience[];
---

<section id="experience" class="root">
  <div class="wrapper">
    <h3 class="title"># Experience</h3>
    <TabsWithContent data={experience} style="isPrimary" client:visible />
  </div>
</section>

<style>
  .root {
    padding: calc(var(--header-ht)) 15px 20px;
    background: linear-gradient(180deg, var(--co-light) 25%, #f8f9fd 100%);
  }

  .wrapper {
    max-width: var(--lg);
    margin-inline: auto;
  }
  .wrapper > * {
    margin-bottom: 20px;
  }

  .title {
    font: 900 1.8rem/1.8rem var(--ff-primary);
    background-image: var(--gradient-title);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  @media (min-width: 768px) {
    .root {
      padding-top: var(--header-ht-dt);
    }

    .wrapper > * {
      margin-bottom: 30px;
    }
  }
</style>
